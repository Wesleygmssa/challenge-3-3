<section class="cards">

{% block content %}
 {% for item in items%}
            <div class="card" id="{{item.id}}">
                <div class="card-img">
                    <img src="{{item.img}}" alt="">
                    {% if item.featured == 'launchbase' %}
                        <div class="featured">Featured</div>
                    {% endif %}
                    {% if item.featured == false %}
                        <div class="not-featured">not-featured</div>
                    {% endif %}
                </div>
                <div class="card_content">
                    <p>{{item.info_1}}</p>
                </div>
                <div class="card_info">
                    {{item.info_2}}
                </div>
            </div>
{% endfor %}

</section><!-- FIM CARDS -->
<script src="/courses.js"></script>
{% endblock %}

