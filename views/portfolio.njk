{% extends "layout.njk" %} <!-- Pagina principal -->

{% block css %}
    <link rel="stylesheet" href="/style.css">
 {%endblock%}

{% block head %}
    <title>Porfolio</title>
{% endblock %}

{% block content %}
    <div id="wrapper">
        <h1>Projects</h1>
    </div>

<section class="cards">
{% for item in items %} {# pegando data.js que foi enviado pela rota do servidor #}
    <div class="card" id="{{item.id}}">
        <div class="card_image-container">
                <img src="{{item.img}}" alt="coderBrasil">
                {% if item.featured%}
                    <div class="featured">Destaque</div>
                {%endif%}
                {% if item.featured == false %}
                        <div class="not-featured">not-featured</div>
                {% endif %}
            </div>
            <div class="card_content">
                 <p>{{item.title}}</p>
            </div>
            <div class="card_info">
                <p>{{item.info}}</p>
            </div>
    </div>
{% endfor %}

</section>

<div class="modal-overlay ">
    <div class="modal">
            <a class="close-modal">close</a>
        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>

</div>

<script src="/portfolio.js"></script>
{% endblock %}